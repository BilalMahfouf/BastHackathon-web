# =============================================================================
# Raqib - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
# Connection string for the API (uses Docker service name 'raqib-database' as host)
DefaultConnection=Host=raqib-database;Port=5432;Database=raqib_db;Username=raqib_user;Password=2501

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-super-secret-key-minimum-32-characters-long
JWT_ISSUER=RaqibApi
JWT_AUDIENCE=RaqibApp
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15

# -----------------------------------------------------------------------------
# MQTT Broker (Mosquitto)
# -----------------------------------------------------------------------------
# No credentials needed - anonymous access enabled for hackathon simplicity
# ESP32 devices connect to: <your-PC-LAN-IP>:1883

# -----------------------------------------------------------------------------
# ASP.NET Core
# -----------------------------------------------------------------------------
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_HTTP_PORTS=8080
